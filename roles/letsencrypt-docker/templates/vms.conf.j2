server {
  listen 80;
  listen {{ nginx.vms.port.http }};
  server_name {{ nginx.vms.domain }};

  location /.well-known/acme-challenge {
    default_type "text/plain";
    root {{ nginx_base }}/{{ nginx.vms.domain }};
  }

  location / {
    proxy_pass http://{{ nginx.vms.host }}.{{ nginx.vms.domain }}:{{ nginx.vms.port.http }};
    proxy_buffering off;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Port $server_port;
    proxy_set_header X-Request-Start $msec;
    proxy_set_header X-Real-IP $remote_addr;
  }
}

server {
  listen 443 ssl;
  listen {{ nginx.vms.port.https }} ssl;
  server_name {{ nginx.vms.domain }};

  ssl_certificate_key {{ nginx.certs.remote_directory }}/config/live/{{ nginx.vms.domain }}/privkey.pem;
  ssl_certificate {{ nginx.certs.remote_directory}}/config/live/{{ nginx.vms.domain }}/fullchain.pem;

  location / {
    proxy_pass https://{{ nginx.vms.host }}.{{ nginx.vms.domain }}:{{ nginx.vms.port.https }};
    proxy_buffering off;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Port $server_port;
    proxy_set_header X-Request-Start $msec;
    proxy_set_header X-Real-IP $remote_addr;
  }
}
